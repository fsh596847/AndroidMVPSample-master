<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_add_Item_height"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
>
  <TextView
      android:id="@+id/tvNum"
      tools:text="序号"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
  />
  <TextView
      android:id="@+id/tv1"
      android:background="@drawable/text_bg"
      android:layout_weight="1"
      android:drawableRight="@mipmap/drop"
      android:hint="请选择品种"
      android:gravity="center"
      android:padding="@dimen/activity_horizontal_margin"
      android:layout_marginLeft="30dp"
      android:layout_width="wrap_content" android:layout_height="match_parent"/>
  <RelativeLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:padding="@dimen/activity_horizontal_margin"
      android:background="@drawable/text_bg"
      android:layout_height="match_parent">
    <EditText
        android:id="@+id/tv2"
        android:inputType="number"
        android:hint="请输入规格"
        android:layout_width="match_parent" android:layout_height="match_parent"/>
    <TextView
        android:layout_alignParentRight="true"
        android:text="@string/add_text_tiao_brother"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:background="@drawable/text_bg"
      android:padding="@dimen/activity_horizontal_margin"
      android:layout_height="match_parent">
    <EditText
        android:id="@+id/tv3"
        android:hint="请输入毛重"
        android:inputType="number"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent" android:layout_height="match_parent"/>
    <TextView
        android:layout_alignParentRight="true"
        android:text="@string/add_text_jin"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
  </RelativeLayout>

  <Button
      android:id="@+id/btn4"
      android:text="增加"
      android:layout_weight="0.1"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="30dp"
      android:textColor="@color/colorloginBtn"
      android:background="@drawable/btn_add_bg"
      android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>